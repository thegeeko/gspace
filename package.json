{
  "name": "gspace",
  "private": true,
  "version": "0.0.1",
  "author": "KATT",
  "license": "MIT",
  "scripts": {
    "db-up": "docker compose up -d",
    "db-nuke": "docker compose down --volumes --remove-orphans",
    "dev:fastify": "yarn --cwd apps/server dev",
    "dev:nextjs": "yarn --cwd apps/webapp dev",
    "lint": "eslint --ext \".js,.ts,.tsx\" --ignore-path .gitignore . && manypkg check",
    "lint-fix": "yarn lint --fix && manypkg fix",
    "dev": "run-s db-up && run-p dev:* --print-label",
    "clean": "find . -name node_modules -o -name .next -o -name .expo -type d -prune | xargs rm -rf",
    "prisma-dev": "prisma migrate dev && prisma generate",
    "postinstall": "prisma generate"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "prettier": {
    "printWidth": 110,
    "trailingComma": "all",
    "tabWidth": 2,
    "singleQuote": false
  },
  "dependencies": {
    "@manypkg/cli": "^0.18.0",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "prisma": "^4.1.1"
  }
}
